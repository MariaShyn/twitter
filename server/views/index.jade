doctype html
html(ng-app='twitter')
    head
        link(rel='stylesheet', href='vendor/bower_components/bootstrap/dist/css/bootstrap.min.css')
        title TWITTER
        link(rel='stylesheet', href='/stylesheets/style.css')
        meta(http-equiv='content-type', content='text/html; charset=UTF-8')
    body(ng-cloak='')
        nav.navbar.navbar-default.navbar-static-top
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#')
                        img#icon(alt='Brand', scr='/images/icon.png')
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        if(!user)
                            li
                                a(ui-sref='#') Home
                        else
                            li
                                a(ui-sref='profile') Profile
                        li
                            a(ui-sref='about') About
                        li
                            a(ui-sref='contact') Contact
                    if(user)
                        ul.nav.navbar-nav.navbar-right
                            li
                               a(href = '/', onclick = "$(\'<form method=post action=/logout>').submit();return false;") Logout

        .container-fluid
            ui-view
    // VENDOR
    script(src='vendor/bower_components/angular/angular.min.js')
    script(src='vendor/bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js')
    script(src='vendor/bower_components/angular-ui-router/release/angular-ui-router.min.js')
    script(src='vendor/bower_components/jquery/dist/jquery.min.js')
    script(src='vendor/bower_components/bootstrap/dist/js/bootstrap.min.js')
    // APP
    script(src='js/app.js')
    script(src='js/aboutCtrl.js')
    script(src='js/contactCtrl.js')
    script(src='js/homeCtrl.js')
    script(src='js/profileCtrl.js')
