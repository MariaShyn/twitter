extends layouts/mainLayout
block title
    title Error
block content
    center
        br
        br
        .row
            .col-md-3.col-md-offset-1.myinfoform
                br
                h2 My Info
                br
                .row
                    .col-md-4.col-md-offset-4.myimg
                br
                .row
                    .col-md-6
                        p Name:
                    .col-md-6
                        p #{user.fullname}
                .row
                    .col-md-6
                        p Email:
                    .col-md-6
                        p #{user.email}
            .col-md-6.col-md-offset-1.myinfoform
                .row
                    br
                    .col-lg-10.col-md-offset-1
                        .input-group
                            input.form-control(type='text', placeholder="What's new?" id="newTwitText")
                            span.input-group-btn
                                button.btn.btn-default(type='button' id = "newTwit") Go!
                    br
                    br
                    br
                    .col-lg-10.col-md-offset-1
                        ul
                            if(user.twits.length > 0)
                                each val in user.twits
                                    li= val
                            else
                                h2 You have no twits yet
            script.
                $('#newTwit').click(function() {
                    $.ajax({
                        url: "/newtwit",
                        method: "POST",
                        data: {
                            newtwit : $('#newTwitText').val()
                        },
                        statusCode: {
                            200: function() {
                                window.location.href = "/profile";
                            }
                        }
                    });
                    return false;
                });
